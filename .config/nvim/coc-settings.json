{
    "diagnostic": {
        "errorSign": "",
        "warningSign": "",
        "infoSign": "",
        "hintSign": ""
    },
    "languageserver": {
        "golang": {
            "command": "gopls",
            "filetypes": [
                "go"
            ],
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        }
    },
    "explorer": {
        "position": "right",
        "width": 40,
        "keyMappings": {
            "<cr>": ["expandable?", "expand", "open"],
            "<tab>": "actionMenu",
            "*": "toggleSelection",
            "h": "collapse",
            "l": ["expandable?", "expand", "open"],
            "j": "nodeNext",
            "k": "nodePrev",
            "e": "open",
            "s": "open:split",
            "v": "open:vsplit",
            "t": "open:tab",
            "y": "copyFilename",
            ".": "toggleHidden",
            "r": "refresh",
            "i": "preview" 
        },
        "file": {
            "showHiddenFiles": true,
            "autoReveal": true,
            "column": {
                "indent": {
                    "indentLine": false
                },
                "git": {
                    "icon": {
                        "mixed": "",
                        "unmodified": " ",
                        "modified": "",
                        "added": "+",
                        "deleted": "",
                        "renamed": "",
                        "copied": "",
                        "unmerged": "x",
                        "untracked": "?",
                        "ignored": ""
                    }
                }
            }
        },
        "previewAction": {
            "onHover": false
        },
        "icon": {
            "enableVimDevicons": true,
            "expanded": "",
            "collapsed": "",
            "selected": "",
            "hidden": ""
        }
    }
}
